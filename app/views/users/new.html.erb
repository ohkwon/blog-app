<%= form_tag '/signup', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, "", placeholder: "Email Address!" %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, "", placeholder: "Password" %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation, "", placeholder: "Password Confirmation" %>
  </div>
  <div>
    <%= submit_tag "Create Account!" %>
  </div>
<% end %>